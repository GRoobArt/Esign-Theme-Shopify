{%- liquid
  assign block_settings = block.settings
  assign custom_price_cents = block_settings.price_custom | times: 100 | round
  assign formatted_price = custom_price_cents | money
-%}

{% liquid
  if block_settings.type_preset == 'rte' or block_settings.type_preset == 'paragraph'
    assign is_rte = true
  endif

  capture text_block_classes
    if block_settings.width == '100%'
      echo 'text-block--align-' | append: block_settings.alignment
      if block_settings.max_width == 'none'
        echo ' text-block--full-width'
      endif
    endif
    if block_settings.type_preset == 'custom'
      echo ' custom-typography'
      if block_settings.font_size != ''
        echo ' custom-font-size'
      endif
      if block_settings.color != ''
        echo ' custom-color'
      endif
    endif
    if block_settings.background
      echo ' text-block--background'
    endif
    if is_rte
      echo ' rte'
    endif
  endcapture
%}

<div
  class="text-block {{ text_block_classes }} text-{{ block_settings.alignment }} {{ block_settings.type_preset | default: 'paragraph' }} spacing-style"
  data-block-id="{{ block.id }}"
  style="
    {% render 'typography-style', settings: block_settings %}
    {% render 'spacing-style', settings: block_settings %}
    --width: {{ block_settings.width }};
  "
  {{ block.shopify_attributes }}
>
  <div class="price-custom__container">
    {% if block_settings.show_to_text %}
      <span class="amount-to-text">{{ 'content.price_to' | t }}</span>
    {% endif %}
    <span class="price">{{ formatted_price }}</span>
    <span class="tax-included">{{ 'content.price_tax' | t }}</span>
    {% if block_settings.show_tax_amount %}
      {%- liquid
        # selected_variant.price esta en centavos
        assign price_with_tax_cents = custom_price_cents | times: 1.19 | round
        assign price_with_tax = price_with_tax_cents | money
      -%}
      <span class="price-tax">{{ 'content.amount_tax' | t: amount: price_with_tax }}</span>
    {% endif %}
  </div>
</div>

{% # theme-check-disable %}
{% stylesheet %}
  .price-custom__container {
    display: flex;
    flex-wrap: wrap;
    gap: 4px;
    align-items: center;

     .amount-to-text,
    .price-tax{
      font-size: var(--font-h4--size);
      font-size: min(0.85em, var(--font-paragraph--size));
      font-weight: var(--font-paragraph--weight);
      line-height: 1;
      flex: 0 0 100%;
    }

    .tax-included{
        font-size: var(--font-h3--size);
        font-size: min(1em, var(--font-paragraph--size));
        font-weight: var(--font-paragraph--weight);
    }
  }

  .price-custom__container .price {
    line-height: 1;
  }
{% endstylesheet %}

