{% liquid
    assign file = closest.product.metafields.product.file | file_url
    if file == blank
      assign file = block.settings.file | file_url
    endif
%}

{% if closest.product.metafields.product.file != blank %}
  {% render 'button', link: file %}
{% endif %}

{% schema %}
{
  "name": "t:names.file",
  "tag": null,
  "settings": [
    {
      "type": "image_picker",
      "id": "file",
      "label": "t:names.file"
    },
    {
      "type": "checkbox",
      "id": "open_in_new_tab",
      "label": "t:settings.open_new_tab",
      "default": false    
    },
    {
      "type": "text",
      "id": "label",
      "label": "t:settings.label",
      "default": "t:text_defaults.button_label"
    },
    {
      "type": "select",
      "id": "hidden",
      "label": "t:names.display",
      "options": [
        {
          "value": "hidden--desktop",
          "label": "t:options.hidden_desktop"
        },
        {
          "value": "hidden--mobile",
          "label": "t:options.hidden_mobile"
        },
        {
          "value": "none",
          "label": "t:options.none"
        }
      ],
      "default": "none"
    },
    {
      "type": "select",
      "id": "style_class",
      "label": "t:settings.style",
      "options": [
        {
          "value": "button",
          "label": "t:options.primary"
        },
        {
          "value": "button-secondary",
          "label": "t:options.secondary"
        },
        {
          "value": "link",
          "label": "t:options.link"
        }
      ],
      "default": "button"
    },
    {
      "type": "select",
      "id": "size_class",
      "label": "t:settings.size",
      "options": [
        {
          "value": "none",
          "label": "t:options.none"
        },
        {
          "value": "size-sm",
          "label": "t:options.small"
        },
        {
          "value": "size-lg",
          "label": "t:options.large"
        }
      ],
      "default": "none"
    },
    {
      "type": "header",
      "content": "t:content.size"
    },
    {
      "type": "select",
      "id": "width",
      "label": "t:settings.width_desktop",
      "options": [
        {
          "value": "fit-content",
          "label": "t:options.fit_content"
        },
        {
          "value": "custom",
          "label": "t:options.custom"
        }
      ],
      "default": "fit-content"
    },
    {
      "type": "range",
      "id": "custom_width",
      "label": "t:settings.custom_width",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "%",
      "default": 100,
      "visible_if": "{{ block.settings.width == \"custom\" }}"
    },
    {
      "type": "select",
      "id": "width_mobile",
      "label": "t:settings.width_mobile",
      "options": [
        {
          "value": "fit-content",
          "label": "t:options.fit_content"
        },
        {
          "value": "custom",
          "label": "t:options.custom"
        }
      ],
      "default": "fit-content"
    },
    {
      "type": "range",
      "id": "custom_width_mobile",
      "label": "t:settings.custom_width",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "%",
      "default": 100,
      "visible_if": "{{ block.settings.width_mobile == \"custom\" }}"
    }
  ],
  "presets": [
    {
      "name": "t:names.file",
      "category": "t:categories.basic",
      "settings": {
        "file": "{{ closest.product.metafields.product.file.value }}",
        "open_in_new_tab": true,
        "width": "custom",
        "custom_width": 100,
        "width_mobile": "custom",
        "custom_width_mobile": 100
      }
    }
  ]
}
{% endschema %}
